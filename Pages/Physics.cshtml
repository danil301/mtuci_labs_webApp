@page
@model mtuci_labs.Pages.PhysicsModel
@{
}

<h1>Методички для лабораторных работ по физике</h1>

<div class="container">
	@for (int i = 0; i < Model.Subjects.Count(); i++)
	{	
			@if(Model.Subjects[i].Name == "Физика")
			{
				<div class="d-flex justify-content-between">
					<div>Предмет: @Model.Subjects[i].Name</div>
					<div>Курс: @Model.Subjects[i].Course</div>
					<a href="@Url.Page("Physics", "DownloadFile", new { fileName = Model.Files[i].FileName })">@Model.Files[i].FileName</a>
				</div>
			}		
	}
</div>